<script>
console.log('Script carregado!');

function selecionarArea(areaId) {
    console.log('selecionarArea chamada:', areaId);
    
    var areas = document.getElementById('areas-section');
    var consultores = document.getElementById('consultores-section');
    
    if (areas) {
        areas.style.display = 'none';
        console.log('Areas ocultadas');
    } else {
        console.error('areas-section n√£o encontrado!');
    }
    
    if (consultores) {
        consultores.style.display = 'block';
        console.log('Consultores exibidos');
    } else {
        console.error('consultores-section n√£o encontrado!');
    }
    
    carregarConsultores(areaId);
}

function voltarAreas() {
    document.getElementById('areas-section').style.display = 'block';
    document.getElementById('consultores-section').style.display = 'none';
}

async function carregarConsultores(areaId) {
    var lista = document.getElementById('consultores-lista');
    lista.innerHTML = '<p>Carregando consultores...</p>';
    
    try {
        var response = await fetch('/api/consultoria/listar?area=' + areaId);
        var data = await response.json();
        
        if (data.success && data.consultores && data.consultores.length > 0) {
            var html = '';
            data.consultores.forEach(function(c) {
                html += '<div class="col-md-4 mb-3">';
                html += '<div class="card"><div class="card-body">';
                html += '<h5>' + c.nome + '</h5>';
                html += '<p>' + (c.especialidade || '') + '</p>';
                html += '<button class="btn btn-primary" onclick="abrirModal(' + c.id + ')">Solicitar</button>';
                html += '</div></div></div>';
            });
            lista.innerHTML = html;
        } else {
            lista.innerHTML = '<p>Nenhum consultor dispon√≠vel.</p>';
        }
    } catch (e) {
        console.error('Erro:', e);
        lista.innerHTML = '<p>Erro ao carregar consultores.</p>';
    }
}

function abrirModal(id) {
    console.log('Abrindo modal para consultor:', id);
    if (typeof $ !== 'undefined') {
        $('#modalSolicitarConsulta').modal('show');
    }
}

function togglePlataformas() {
    var metodo = document.getElementById('metodo_consulta').value;
    var plat = document.getElementById('plataforma_video');
    if (plat) {
        plat.style.display = metodo === 'videoconferencia' ? 'block' : 'none';
    }
}

console.log('Todas as fun√ß√µes definidas!');
</script>

