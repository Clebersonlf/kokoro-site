<script>
(function(){
  const btn = document.getElementById('btnSettings');
  const panel = document.getElementById('settingsPanel');
  const root = document.documentElement;

  // Guard: painel/temas removidos do HTML
  if(!document.querySelector('.theme-option')){
    return;
  }


  function openClose(){
    if(!panel) return;
    panel.classList.toggle('active');
    panel.setAttribute('aria-hidden', panel.classList.contains('active') ? 'false' : 'true');
  }

  function applyTheme(name){
    document.querySelectorAll('.theme-option').forEach(el => el.classList.remove('active'));
    const selected = document.querySelector('.theme-option[data-theme="'+name+'"]');
    if(selected) selected.classList.add('active');

    const set = (k,v)=>root.style.setProperty(k,v);

    if(name === 'tactical'){
      set('--bg-color','#0F172A');
      set('--grid-color','rgba(255,255,255,.03)');
      set('--glass-bg','rgba(30,41,59,.70)');
      set('--glass-border','rgba(255,255,255,.10)');
      set('--text-main','#F8FAFC');
      set('--text-sec','#94A3B8');
      set('--accent-green','#10B981');
      set('--accent-blue','#3B82F6');
      set('--accent-red','#EF4444');
    } else if(name === 'cyberpunk'){
      set('--bg-color','#000000');
      set('--grid-color','rgba(255,255,255,.03)');
      set('--glass-bg','rgba(20,20,20,.80)');
      set('--glass-border','rgba(255,255,255,.10)');
      set('--text-main','#F8FAFC');
      set('--text-sec','#94A3B8');
      set('--accent-green','#39FF14');
      set('--accent-blue','#00FFFF');
      set('--accent-red','#FF00FF');
    } else if(name === 'ocean'){
      set('--bg-color','#001220');
      set('--grid-color','rgba(255,255,255,.04)');
      set('--glass-bg','rgba(0,50,80,.55)');
      set('--glass-border','rgba(255,255,255,.10)');
      set('--text-main','#F8FAFC');
      set('--text-sec','#94A3B8');
      set('--accent-green','#4ADE80');
      set('--accent-blue','#60A5FA');
      set('--accent-red','#F43F5E');
    }

    try{ localStorage.setItem('admin_theme', name); }catch(e){}
  }

  if(btn) btn.addEventListener('click', (e)=>{ e.preventDefault(); openClose(); });

  document.querySelectorAll('.theme-option').forEach(el=>{
    el.addEventListener('click', ()=>applyTheme(el.getAttribute('data-theme')));
  });

  document.addEventListener('click', (e)=>{
    if(!panel || !panel.classList.contains('active')) return;
    const inside = panel.contains(e.target) || (btn && btn.contains(e.target));
    if(!inside) panel.classList.remove('active');
  });

  document.addEventListener('keydown', (e)=>{
    if(e.key === 'Escape' && panel){
      panel.classList.remove('active');
      panel.setAttribute('aria-hidden','true');
    }
  });

  let saved = null;
  try{ saved = localStorage.getItem('admin_theme'); }catch(e){}
  applyTheme(saved || 'tactical');
})();
</script>

<script>
// Views (Dashboard / Mensagens)
function showView(name){
  const dash = document.getElementById("viewDashboard");
  const msgs = document.getElementById("viewMensagens");
  if(!dash || !msgs) return;

  if(name === "mensagens"){
    dash.style.display = "none";
    msgs.style.display = "block";
  } else {
    msgs.style.display = "none";
    dash.style.display = "block";
  }
}
</script>

