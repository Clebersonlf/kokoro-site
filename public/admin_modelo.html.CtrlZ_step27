:root{
  /* base */
  --bg-color:#0F172A;
  --grid-color:rgba(255,255,255,.04);
  --grid-size:40px;

  /* glass */
  --glass-bg:rgba(30,41,59,.70);
  --glass-border:rgba(255,255,255,.10);
  --glass-shadow:0 4px 30px rgba(0,0,0,.50);

  /* text */
  --text-main:#F8FAFC;
  --text-sec:#94A3B8;

  /* accents */
  --accent-green:#10B981;
  --accent-blue:#3B82F6;
  --accent-red:#EF4444;
}

/* fundo */
body{
  background-color:var(--bg-color) !important;
  background-image:
    linear-gradient(var(--grid-color) 1px, transparent 1px),
    linear-gradient(90deg, var(--grid-color) 1px, transparent 1px) !important;
  background-size:var(--grid-size) var(--grid-size) !important;
  color:var(--text-main) !important;
  transition:background-color .25s ease;
}

/* vidro */
.sidebar,
.panel,
.card,
.settings-panel{
  background:var(--glass-bg) !important;
  border:1px solid var(--glass-border) !important;
  box-shadow:var(--glass-shadow) !important;
  backdrop-filter:blur(12px) !important;
  -webkit-backdrop-filter:blur(12px) !important;
}

/* topbar um pouco mais leve */
.topbar{
  background:rgba(15,23,42,.35) !important;
  border-bottom:1px solid rgba(255,255,255,.06) !important;
  backdrop-filter:blur(10px) !important;
  -webkit-backdrop-filter:blur(10px) !important;
}

/* textos */
.card p,
.settings-title{
  color:var(--text-sec) !important;
}

/* acentos */
.card a{color:var(--accent-blue) !important}
.border-green{border-left:4px solid var(--accent-green) !important}
.border-blue{border-left:4px solid var(--accent-blue) !important}
.border-red{border-left:4px solid var(--accent-red) !important}

