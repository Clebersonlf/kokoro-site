<script>
    // Botão Sair — garante que só existe UM id="btn-logout"
    document.addEventListener("DOMContentLoaded", () => {
        const btn = document.getElementById("btn-logout");
        if (!btn) return;

        btn.addEventListener("click", () => {
            try {
                // limpa chaves comuns usadas ao longo do app
                localStorage.removeItem("adminSecret");
                localStorage.removeItem("kokoro_admin_secret");
                localStorage.removeItem("kkr_admin_secret");
                sessionStorage.clear();
            } catch(_) {}
            alert("Você saiu do sistema!");
            window.location.href = "/";
        });
    });
</script>

<!-- ===== Controle de inatividade (25 min) ===== -->
<script>
    (function () {
        const INACTIVITY_LIMIT_MS = 25 * 60 * 1000; // 25 minutos
        let timerId;

        function performLogout() {
            // Tenta reutilizar exatamente o fluxo do botão "Sair"
            const btn = document.getElementById("btn-logout");
            if (btn) {
                btn.click();
                return;
            }
            // Fallback caso o botão não exista por algum motivo
            try {
                localStorage.removeItem("adminSecret");
                localStorage.removeItem("kokoro_admin_secret");
                localStorage.removeItem("kkr_admin_secret");
                sessionStorage.clear();
            } catch(_) {}
            alert("Sessão expirada por inatividade (25 minutos).");
            window.location.href = "/";
        }

        function resetTimer() {
            clearTimeout(timerId);
            // Atualiza último uso no storage (robusto p/ múltiplas abas)
            try { localStorage.setItem("kokoro_last_activity", String(Date.now())); } catch (_) {}
            timerId = setTimeout(() => {
                performLogout();
            }, INACTIVITY_LIMIT_MS);
        }

        // Sincroniza entre abas: se outra aba atualizar a atividade, reseta aqui também
        window.addEventListener("storage", (e) => {
            if (e.key === "kokoro_last_activity") resetTimer();
        });

        // Eventos que contam como atividade
        ["click","keydown","mousemove","scroll","touchstart","visibilitychange"].forEach(evt => {
            window.addEventListener(evt, resetTimer, { passive: true });
        });

        // Inicializa ao carregar
        resetTimer();
    })();
</script>
<!-- ===== /Controle de inatividade ===== -->

  <script src="/admin/_session_timer.js" defer>  // Carregar estatísticas de convites
  async function loadConvitesStats() {
    try {
      const r = await fetch('/api/convites/ultimos?limit=100');
      const j = await r.json();

      const hoje = new Date().toISOString().split('T')[0];
      const semanaAtras = new Date(Date.now() - 7 * 24 * 60 * 60 * 1000).toISOString().split('T')[0];

      let hojeCount = 0, semanaCount = 0, totalCount = j.data.length;

      j.data.forEach(c => {
        const dataCriacao = c.criado_em.split('T')[0];
        if (dataCriacao === hoje) hojeCount++;
        if (dataCriacao >= semanaAtras) semanaCount++;
      });    } catch (e) {
      console.error('Erro ao carregar convites:', e);
    }
  }

  loadConvitesStats();
  // Carregar estatísticas de convites
  async function loadConvitesStats() {
    try {
      const r = await fetch('/api/convites/ultimos?limit=100');
      const j = await r.json();
      if (!r.ok || !j.ok) return;

      const hoje = new Date().toISOString().split('T')[0];
      const semanaAtras = new Date(Date.now() - 7 * 24 * 60 * 60 * 1000).toISOString().split('T')[0];

      let hojeCount = 0, semanaCount = 0, totalCount = j.data.length;

      j.data.forEach(c => {
        const dataCriacao = c.criado_em.split('T')[0];
        if (dataCriacao === hoje) hojeCount++;
        if (dataCriacao >= semanaAtras) semanaCount++;
      });

      document.getElementById('convitesHoje').textContent = hojeCount;
      document.getElementById('convitesSemana').textContent = semanaCount;
      document.getElementById('convitesTotal').textContent = totalCount;
    } catch (e) {
      console.error('Erro ao carregar convites:', e);
    }
  }

  loadConvitesStats();
</script>
